{
  "include": ["src", "tests", ".dumi/**/*", ".dumirc.ts", "*.ts"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src"],
      "zustand-utils": ["src"],
      "zustand-utils/*": ["src/*", "*"]
    }
  }
}
